<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:background="#EDEDEB"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:background="#3090E6"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp">

    <ImageView android:layout_height="25dp"
        android:layout_width="25dp"
        android:src="@drawable/go_back"
        android:layout_marginLeft="18dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_user_back"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_toRightOf="@+id/iv_user_back"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/iv_user_password_login"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:text="密码登陆"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginLeft="18dp"
        android:layout_centerVertical="true"
        android:id="@+id/et_user_phone"
        android:layout_marginRight="5dp"
        android:inputType="phone"
        android:layout_weight="1"/>

    <TextView
        android:background="#3090E6"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/tv_user_code"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:text="获取验证码"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"/>

</LinearLayout>


    <TextView
        android:background="#4CC05F"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/login"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:text="登陆"
        android:layout_marginRight="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"/>

</LinearLayout>